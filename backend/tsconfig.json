{
  "compilerOptions": {
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "types": ["node", "mocha"],
    "lib": ["ES2022"],
    "target": "ES2022",
    "module": "ES2022",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"],
    },
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules"]
}